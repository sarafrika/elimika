# === DATABASE CONFIGURATION ===
SPRING_DATASOURCE_URL=jdbc:postgresql://<DB_HOST>:<DB_PORT>/<DB_NAME>   # e.g., jdbc:postgresql://localhost:5432/elimika
SPRING_DATASOURCE_USERNAME=<DB_USERNAME>                                # Database username
SPRING_DATASOURCE_PASSWORD=<DB_PASSWORD>                                # Database password

# === OAUTH2 / KEYCLOAK JWT CONFIGURATION ===
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=<KEYCLOAK_ISSUER_URI>   # e.g., https://auth.example.com/realms/elimika
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=<KEYCLOAK_JWK_URI>     # e.g., https://auth.example.com/realms/elimika/protocol/openid-connect/certs

# === KEYCLOAK ADMIN CONFIGURATION (FOR SERVICE-LEVEL ACCESS) ===
APP_KEYCLOAK_REALM=<KEYCLOAK_REALM>                            # e.g., elimika
APP_KEYCLOAK_SERVER_URL=<KEYCLOAK_BASE_URL>                    # e.g., https://auth.example.com/
APP_KEYCLOAK_ADMIN_CLIENTID=<KEYCLOAK_CLIENT_ID>               # Client ID with admin privileges
APP_KEYCLOAK_ADMIN_CLIENTSECRET=<KEYCLOAK_CLIENT_SECRET>       # Corresponding client secret

# === ENCRYPTION CONFIGURATION ===
ENCRYPTION_SECRET_KEY=<ENCRYPTION_SECRET_KEY>                 # Used for data encryption/decryption (keep secret and 256-bit long)
ENCRYPTION_SALT=<ENCRYPTION_SALT>                             # Used alongside the secret key for stronger encryption
